@{
    Layout = "_AdminLayout";
}

<header class="content_header">
    <h1>داشبورد آماری</h1>
</header>

<div class="stats_grid">
    <!-- کارت آمار -->
    <div class="stat_card">
        <h3>تعداد کاربران</h3>
        <p>۱,۲۴۵</p>
    </div>
    <div class="stat_card">
        <h3>تعداد محصولات</h3>
        <p>۳۸۹</p>
    </div>
    <div class="stat_card">
        <h3>کامنت‌های جدید</h3>
